{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
